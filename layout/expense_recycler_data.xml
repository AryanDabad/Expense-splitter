<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="80dp"
   android:layout_margin="10dp"
    android:elevation="5dp"
    app:cardBackgroundColor="@color/white"

    app:cardCornerRadius="20dp"
    app:cardElevation="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:id="@+id/date_txt_expense"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="5dp"
                android:text="30 Nov 2020"
                android:textAppearance="?android:textAppearanceSmall"
                android:textColor="@color/date_colour"
                android:textStyle="bold" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2">

            <TextView
                android:id="@+id/type_txt_expense"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:text="Type"
                android:textAppearance="?android:textAppearanceSmall"
                android:textColor="@color/date_colour"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/note_txt_expense"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/type_txt_expense"
                android:maxLines="1"
                android:text="Note"
                android:textAppearance="?android:textAppearanceSmall"
                android:textColor="@color/date_colour"
                android:textStyle="italic" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:id="@+id/amount_txt_expense"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="600000"
                android:textAppearance="?android:textAppearanceSmall"
                android:textColor="@color/date_colour"
                android:textStyle="bold" />

        </RelativeLayout>


    </LinearLayout>

</com.google.android.material.card.MaterialCardView>