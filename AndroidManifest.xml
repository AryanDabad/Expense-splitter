<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.expensemanager">

    <application
        android:allowBackup="true"
        android:icon="@drawable/budget"
        android:label="@string/app_name"
        android:roundIcon="@drawable/budget"
        android:supportsRtl="true"
        android:theme="@style/Theme.ExpenseManager">
        <activity android:name=".ui.MainActivity" />
        <activity android:name=".ui.HomeActivity" />
        <activity android:name=".ui.ResetPasswordActivity" />
        <activity android:name=".ui.RegistrationActivity" />
        <activity android:name=".ui.GroupMemberActivity" />
        <activity
            android:name=".ui.SplashScreen"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>